@{ 
    ViewBag.Title = "Nghiên Cứu Khoa Học";
}
@model IEnumerable<QuanLyTruongHoc.Models.@new>


<div class="row mx-5 bg-white">
    <div class="col-md-8">

        <div class="panel-bd-top title-menu mt-4">
            <h4 class="py-3 pl-3">
                <i class="fas fa-list-ul"></i> Nghiên Cứu khoa Học
            </h4>
        </div>

        @foreach (var item in Model)
        {
            <div class="p-3">
                <div class="row d-flex justify-content-between align-items-center multiple-ttsk">
                    <div class="col-md-3 col-lg-3 col-xl-3">
                        <img src="~/images/tintuc/@item.imageNews" class="img-fluid rounded-3" id=""
                             alt="">
                    </div>
                    <div class="col-md-9 col-lg-9 col-xl-9 py-4">
                        <a href="@Url.Action("Index", "ChiTietTinTuc", new { id = @item.slug })"
                           class="text-decoration-none text-dark">
                            <h6 class="mb-2">
                                <strong>@item.title</strong>
                            </h6>
                        </a>
                        <p class="text-muted font-italic">
                            <i class="fas fa-calendar-alt"></i> @string.Format("{0:dd/MM/yyyy}", item.created_at)
                        </p>
                        <a href="@Url.Action("Index", "ChiTietTinTuc", new { id = @item.slug })" class="text-decoration-none"
                           style="color: #2F7019">
                            Xem chi tiết <i class="fas fa-angle-double-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
    <div class="col-md-4">
        <div class="latest-news mt-4 shadow-sm">
            <h5 class="text-white text-center">
                <i class="far fa-newspaper"></i> Tin tức - Sự kiện
            </h5>

            <section class="p-2" style="overflow: auto; height: 400px;">
                @foreach (var item in (IEnumerable<QuanLyTruongHoc.Models.@new>)ViewData["TinMoiNhat"])
                {
                    <div class="multiple-ttsk">
                        <a class="text-decoration-none text-dark"
                           href="@Url.Action("Index", "ChiTietTinTuc", new { id = @item.slug })">@item.title</a>
                    </div>
                }
            </section>

        </div>

        <div class="panel py-3">
            <div class="pb-3" style="border-top: 3px solid #f89c2c;"></div>
            <a href="#">
                <img src="~/Content/mycontent/img/panel/1.jpg" alt="" srcset="">
            </a>
            <a href="#">
                <img src="~/Content/mycontent/img/panel/2.jpg" alt="" srcset="">
            </a>
            <a href="http://wwww.ciren.gov.vn/" target="_blank">
                <img src="~/Content/mycontent/img/panel/3.jpg" alt="" srcset="">
            </a>
            <a href="http://www.dgmv.gov.vn/" target="_blank">
                <img src="~/Content/mycontent/img/panel/4.jpg" alt="" srcset="">
            </a>
        </div>
    </div>
</div>
